<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <% if !@category.nil? %>
                <li class="active"><%= @category.name %></li>
            <% end %>
        </ol>
    </div>
</div>
    <!-- /.row -->

<div class="row">
    <div class="col-md-2">
        <div class="list-group">
            <% @categories.each do |cat| %>
                <% if @category.nil? %>
                    <a href="<%= category_path(cat) %>" class="list-group-item inactive">
                       <%= cat.name %>
                    </a>
                <% else %>
                    <% if cat.id == @category.id %>
                        <a href="<%= category_path(cat) %>" class="list-group-item active">
                            <%= cat.name %>
                        </a>
                    <% else %>
                        <a href="<%= category_path(cat) %>" class="list-group-item inactive">
                            <%= cat.name %>
                        </a>    
                    <% end %>
                <% end %>
            <% end %>
        </div>
    </div>
    <div class="col-md-10">
        <% @items.each do |item| %>
            <div class="row">
                <div class="col-md-7">
                    <a href="<%= item_path(item) %>">
                        <%= image_tag(item.img_url, class: "img-responsive") %>
                    </a>
                </div>
                <div class="col-md-5">
                    <h3><a href="<%= item_path(item) %>"><%= item.title %></a></h3>
                    <h4><%= item.slogan %></h4>
                    <p><%= item.description %></p>
                    <a class="btn btn-primary" href="<%= item_path(item) %>">View Product <span class="glyphicon glyphicon-chevron-right"></span></a>
                </div>
            </div>
            <hr>
        <% end %>
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <%= paginate @items %>
                </ul>
            </div>
        </div>
    </div>
</div>