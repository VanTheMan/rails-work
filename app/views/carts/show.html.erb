<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li class="active">Cart</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Product Name</th>
                <th>Image</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>

            <% @items.each do |item| %>
            <tr>
             
                <td><a href="<%= item_path(item) %>"><%= item.title %></a></td>
                <td class="muted center_text"><a href="<%= item_path(item) %>"><%= image_tag(item.img_url, width: 300) %></a></td>
                <td>
                    <select name="quantity" onchange="this.form.submit()">
                        <option value="0">0 (Remove)</option>
                        <% (1..25).each do |num| %>
                            <option value="<%= num %>"><%= num %></option>
                        <% end %>
                    </select>
                </td>
                <td>
                    <%= item.price %>
                </td>
                <td id="item-price">
                    0
                </td>

            </tr>
            <% end %>

            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td id="total-price"><strong>0</strong></td>
            </tr>
            </tbody>
        </table>

    </div>



    <div class="row">
        <div class="col-md-12" style="text-align:right; padding-right: 30px;">
            <button class="btn btn-success" type="submit">Proceed to Checkout</button>
        </div>
    </div>
</div>